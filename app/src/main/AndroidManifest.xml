<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tomschammo.coursetimer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="locked"
            android:label="@string/app_name"
            android:multiprocess="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.StandardPopUpActivity"
            android:screenOrientation="locked"
            android:theme="@style/PopUp">
        </activity>
        <activity
            android:name=".Activities.PickerPopUpActivity"
            android:screenOrientation="locked"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
        </activity>
        <activity
            android:name=".Activities.AddSessionActivity"
            android:screenOrientation="locked"
            android:theme="@style/PopUp">
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:screenOrientation="locked">
        </activity>
    </application>

</manifest>